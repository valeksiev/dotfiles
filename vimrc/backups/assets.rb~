class DisableAssetsLogger

  def initialize(app)
    @app = app
    Rails.application.assets.logger = Logger.new('/dev/null')
  end

  def call(env)
    previous_level = Rails.logger.level
    Rails.logger.level = Logger::ERROR if env['PATH_INFO'].index("/assets/") == 0
    @app.call(env)
  ensure
    Rails.logger.level = previous_level
  end

end

Rails.application.config.middleware.insert_before Rails::Rack::Logger, DisableAssetsLogger if Rails.env.development

module AssetViewHelper
# TODO find a way to include ActionView::Renderer in sprockets. for now it is working...
  def render_partial file, location
    template = ERB.new File.new(File.expand_path(File.join(File.dirname(location), "_#{file}.html.erb"))).read, nil, "%"
    template.result(binding)
  end
end

Rails.application.assets.context_class.class_eval do
  include ActionView::Helpers
  include AssetViewHelper
  include Rails.application.routes.url_helpers
end
