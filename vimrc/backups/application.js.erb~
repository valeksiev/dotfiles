window.config         = {}
window.config.api_uri = '<%= EDHUB_API.base_uri %>'
window.config.env     = '<%= Rails.env  %>'

//
// Access rootScope of AngularJS
// Example:
// var rootScope = rootScope()
// => Scope {$id: "002", $$childTail: null, $$childHead: null, $$prevSibling: ....
//
rootScope = function() {
  return (angular.element(document).injector()).get('$rootScope'.toString())
}

// Fetch any AngularJS dependency
//
// And return it to the user
//
// Example:
//   var model = getModel('Model')
//
//   or
//
//   var rootScope = getModel('$rootScope')
//
getModel = function(model_name) {
  return (angular.element(document).injector()).get(model_name.toString())
}

// Get the AngularJS Scope of html element
//
// Example:
//   var scope = getScope('body')
//
//   var content_scope = getScope('//content')
getScope = function(selector) {
  return angular.element(selector).scope()
}
