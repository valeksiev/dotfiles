Application.controller 'teacher.LaunchPadCtrl',
['$scope', '$rootScope', 'Account', 'Group'
( $scope,   $rootScope,   Account,   Group) ->

  $scope.$on '$viewContentLoaded', () ->
    $scope.initialize()

  $scope.initialize = () ->
    $scope.groups = $rootScope.current_account.groups
    $scope.setGroup($scope.groups[0])
    
  $scope.setGroup = (group) ->
    console.log group
    $scope.current_group = group
    Group.get_applications($scope.current_group.id, (applications) ->
      $scope.applications  = applications
    )

]
