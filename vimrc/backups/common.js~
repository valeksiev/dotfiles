// RESET MODAL ---------------

$(function(){
 $('#schools-modal').on('hidden', function () {
   resetModalForm()
 });
 $('#apps-modal').on('hidden', function () {
   resetModalForm()
 });
})

resetModalForm = function() {
 $('.wpcf7-form-control-wrap').removeClass('hidden');
 $('.signup-captcha').removeClass('hidden');
 $('.modal-footer').removeClass('hidden');
 $('.wpcf7-response-output').addClass('hidden');
 $('form').resetForm().clearForm();
}

// -------------------------

$(window).scroll(function () { 
  if ($(this).scrollTop() > 70) {
    $("#headerf").slideDown( "fast" );
  } else
    $("#headerf").slideUp( "medium" );
});


schoolBenefits = function(){
  $('#nav-developers').removeClass('nav-link-active');
  $('#nav-schools').addClass('nav-link-active');
  $('#developer-benefits').removeClass('active');
  $('#school-benefits').addClass('active'); 
  beneftisCarouselTop();
}

devBenefits = function(){
  $('#nav-schools').removeClass('nav-link-active');
  $('#nav-developers').addClass('nav-link-active');
  $('#school-benefits').removeClass('active'); 
  $('#developer-benefits').addClass('active'); 
  beneftisCarouselTop();
}

beneftisCarouselTop = function(){
  $('html, body').animate({
    scrollTop: $('#benefits-carousel').offset().top + 'px'
  }, 'medium');
}
scrollBottom = function(){
  $('html, body').animate({
    scrollTop: $('body')[0].scrollHeight + 'px'
  }, 'medium');
}

prepareContactForm = function(){
  $('#contact-forms .title').click(function(event){
    $('.cf7_form_box').css('display', 'none');
    $('.title').removeClass('title-active');
    label = $(event.target);
    if(!label.hasClass('title')){
      label = $(event.target).parent();
    }
    label.addClass('title-active');
    $('#'+label.attr('data-for')).css('display', 'block');
  });
  
  $('.title-developer').click();
  $.each($('#contact-forms select'), function(index, input){
    $(input).children()[0].value = '';
  });
}
